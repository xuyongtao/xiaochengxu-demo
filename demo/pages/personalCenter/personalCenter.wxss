.panel {
    margin-bottom: 20rpx;
    background-color: #fff;
    border-bottom: 1px solid #e0e0e0;
    border-top: 1px solid #e0e0e0;
    overflow: hidden;
    color: #3a3a3a;
}
.panel navigator {
    position: relative;
    padding: 20rpx 30rpx;
    font-size: 34rpx;
    line-height: 48rpx;
}
/*不知道是不是不支持伪类::first-child，没有起小姑*/
.panel navigator.first {
    margin-top: -1px;
}
.panel navigator::after {
    content: " ";
    display: inline-block;
    height: 12rpx;
    width: 12rpx;
    border-width: 4rpx 4rpx 0 0;
    border-color: #C8C8CD;
    border-style: solid;
    -webkit-transform: matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
    transform: matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
    top: -4rpx;
    position: absolute;
    top: 50%;
    margin-top: -8rpx;
    right: 30rpx;
}
.panel navigator::before {
    content: " ";
    position: absolute;
    top: 0;
    left: 30rpx;
    right: 0;
    height: 1px;
    border-top: 1px solid #D9D9D9;
    color: #D9D9D9;
    -webkit-transform-origin: 0 0;
    transform-origin: 0 0;
    -webkit-transform: scaleY(0.5);
    transform: scaleY(0.5);
}
.panel icon {
    width: 40rpx;
    height: 40rpx;
    margin-right: 10rpx;
    background-color: #f0f0f0;
    vertical-align: middle;
}

/*老师信息样式*/
